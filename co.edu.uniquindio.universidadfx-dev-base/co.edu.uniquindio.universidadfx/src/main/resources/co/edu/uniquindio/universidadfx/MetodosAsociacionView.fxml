<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.universidadfx.viewcontroller.MetodosAsociacionViewController"
      alignment="CENTER"
      prefHeight="572.0"
      prefWidth="773.0"
      spacing="20"
      style="-fx-background-color: #f9f9f9; -fx-padding: 30;">
    <Label prefHeight="30.0" prefWidth="400.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Asociaciones y Desasociaciones" />

    <!-- Contenedor principal horizontal -->
    <HBox alignment="CENTER" prefHeight="358.0" prefWidth="720.0" spacing="40">

        <!-- Columna izquierda: Curso ↔ Docente -->
        <VBox alignment="CENTER" spacing="20">

            <!-- Asociar Curso a Docente -->
            <GridPane hgap="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcdcdc;                              -fx-border-radius: 10; -fx-background-radius: 10;" vgap="10">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Asociar Curso a Docente" GridPane.columnSpan="2" />
                <Label text="ID Docente:" GridPane.rowIndex="1" />
                <TextField fx:id="txtIdDocenteAsociar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="ID Curso:" GridPane.rowIndex="2" />
                <TextField fx:id="txtIdCursoAsociarDocente" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="btnAsociarCursoDocente" onAction="#onActionAsociarDocente" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Asociar" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Desasociar Curso de Docente -->
            <GridPane hgap="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcdcdc;                              -fx-border-radius: 10; -fx-background-radius: 10;" vgap="10">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Desasociar Curso de Docente" GridPane.columnSpan="2" />
                <Label text="ID Docente:" GridPane.rowIndex="1" />
                <TextField fx:id="txtIdDocenteDesasociar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="ID Curso:" GridPane.rowIndex="2" />
                <TextField fx:id="txtIdCursoDesasociarDocente" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="btnDesasociarCursoDocente" onAction="#onActionDesasociarDocente" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Desasociar" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

        </VBox>

        <!-- Columna derecha: Estudiante ↔ Curso -->
        <VBox alignment="CENTER" spacing="20">

            <!-- Asociar Estudiante a Curso -->
            <GridPane hgap="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcdcdc;                              -fx-border-radius: 10; -fx-background-radius: 10;" vgap="10">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Asociar Estudiante a Curso" GridPane.columnSpan="2" />
                <Label text="ID Estudiante:" GridPane.rowIndex="1" />
                <TextField fx:id="txtIdEstudianteAsociar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="ID Curso:" GridPane.rowIndex="2" />
                <TextField fx:id="txtIdCursoAsociarEstudiante" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="btnAsociarEstudianteCurso" onAction="#onActionAsociarEstudiante" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Asociar" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Desasociar Estudiante de Curso -->
            <GridPane hgap="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dcdcdc;                              -fx-border-radius: 10; -fx-background-radius: 10;" vgap="10">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Desasociar Estudiante de Curso" GridPane.columnSpan="2" />
                <Label text="ID Estudiante:" GridPane.rowIndex="1" />
                <TextField fx:id="txtIdEstudianteDesasociar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="ID Curso:" GridPane.rowIndex="2" />
                <TextField fx:id="txtIdCursoDesasociarEstudiante" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="btnDesasociarEstudianteCurso" onAction="#onActionDesasociarEstudiante" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Desasociar" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

        </VBox>

    </HBox>

</VBox>
